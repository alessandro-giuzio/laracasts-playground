---
// Navigation component for lessons
export interface Props {
	currentLesson?: string;
}
const lessons = [
	{ name: "CSS Transitions", id: "css-transitions" },
	// Add more lessons here as needed
];
const { currentLesson } = Astro.props;
---

<nav>
  <ul>
    <li class={!currentLesson ? 'active' : ''}>
      <a href='/'>Home</a>
    </li>
    {
      lessons.map(lesson => (
        <li class={lesson.id === currentLesson ? 'active' : ''}>
          <a href={`/${lesson.id}`}>{lesson.name}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    margin-bottom: 2rem;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    border-radius: 0.75rem;
    padding: 0.5rem 1.5rem;
    display: flex;
    justify-content: center;
  }
  ul {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  li {
    display: flex;
    align-items: center;
  }
  a {
    text-decoration: none;
    color: #222;
    font-size: 1.1rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    transition:
      background 0.2s,
      color 0.2s;
    display: block;
  }
  a:hover {
    background: #f0f4fa;
    color: #2563eb;
  }
  li.active a {
    font-weight: bold;
    background: #2563eb;
    color: #fff;
    box-shadow: 0 2px 8px rgba(37, 99, 235, 0.08);
  }
</style>
